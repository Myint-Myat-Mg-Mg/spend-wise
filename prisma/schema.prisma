generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model User {
  id                String   @id @default(uuid())
  name              String
  email             String   @unique
  password          String
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt @default(now())
  otps              Otp[]
}

model Otp {
  id                String   @id @default(uuid())
  code              String
  userId            String
  user              User @relation(fields: [userId], references: [id])
  purpose           OtpPurpose
  expiresAt         DateTime
  createdAt         DateTime @default(now())

  @@index([code, purpose])
}

enum OtpPurpose {
 SIGNUP
 LOGIN
 FORGOT_PASSWORD
 DELETE_USER
}

