generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model User {
  id           String        @id @default(uuid())
  name         String
  email        String        @unique
  password     String
  image        String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @default(now()) @updatedAt
  account      Account[]
  otps         Otp[]
  transactions Transaction[]
}

model Otp {
  id        String     @id @default(uuid())
  code      String
  userId    String
  purpose   OtpPurpose
  expiresAt DateTime
  createdAt DateTime   @default(now())
  user      User       @relation(fields: [userId], references: [id])

  @@index([code, purpose])
}

model Account {
  id             String         @id @default(uuid())
  name           String
  balance        Int
  userId         String
  accountType    AccountType
  accountSubType AccountSubType
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  user           User           @relation(fields: [userId], references: [id])
  transaction    Transaction[]  

  @@index([accountType, accountSubType])
}

model Transaction {
  id          String          @id @default(uuid())
  user        User            @relation(fields: [userId], references: [id])
  userId      String
  categoryTag String
  remark      String
  amount      Int
  description String?
  attachmentImage String?
  accountId   String
  account     Account         @relation(fields: [accountId], references: [id])
  createdAt   DateTime        @default(now())
  type        TransactionType
}

enum OtpPurpose {
  SIGNUP
  LOGIN
  FORGOT_PASSWORD
  DELETE_USER
}

enum AccountType {
  WALLET
  BANK
  PAY
}

enum AccountSubType {
  WALLET
  KBZBANK
  CBBANK
  AYABANK
  YOMABANK
  AGDBANK
  OTHER_BANK
  KBZPAY
  CBPAY
  AYAPAY
  WAVEPAY
  OKDOLLAR
  OTHER_PAY
}

enum TransactionType {
  INCOME
  EXPENSE
}
